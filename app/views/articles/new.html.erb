
<%= form_with model: @article, class: 'article-form', local: true do |f| %>
	<div class="bs-docs-section">
		<div class="container">
			<div class="col-lg-12">
				<div class="page-header">
					<h2 class="articletitle" id="forms">新規投稿</h2>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="col-lg-12">
				<div class="well bs-component">
					<form class="form-horizontal">
						<fieldset>
							<h4 class="margin-t" >記事を書く</h4>
								<div class="form-group formheader">
									<label for="textArea" class="col-lg-10 control-label">タイトル</label>
										<div class="col-lg-10">
											<%= f.text_field :title, class:"form-control", id:"inputEmail" %>
										</div>
									<label for="textArea" class="col-lg-10 control-label blank">サムネイル画像</label>
										<div class="col-lg-10">
											<%= f.file_field :image, class:"form-control" %>
										</div>
									<label for="textArea" class="col-lg-10 control-label blank">投稿記事編集<br>※画像は投稿時にリサイズされます</label>
										<div class="col-lg-10">
											<%= f.rich_text_area :content, class:"actextform", id:"textArea" %>
										</div>
									</div>
								<div class="form-group">
									<div class="col-lg-10 margin-t">
									  <%=link_to 'もどる', root_path, class:"btn btn-primary" %>
										<%= f.submit "投稿する" ,class:"btn btn-primary" %>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
			<div class="col-lg-4 col-lg-offset-1">
			</div>
		</div>
	</div>
<% end %>