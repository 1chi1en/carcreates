<div class="container">
  <div class="col-lg-12">
    <div class="well bs-component">
      <div class="form-horizontal">
          <h4 class="margin-t">ユーザー新規登録</h4>
          <div class="margin-t">
          <%= link_to "トップに戻る", root_path, class:"btn btn-primary" %>
          <%= link_to "アカウントをお持ちですか？（ログインする）", new_user_session_path, class:"btn btn-primary" %>
          </div>

          <div class="formheader">
          <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
              <% f.label :nickname %>ニックネーム<br />
              <%= f.text_field :nickname, autofocus: true, class:"form-control", autocomplete: "nickname", maxlength:"40" %>
            </div>

            <div class="form-group">
              <% f.label :email %>メールアドレス<br />
              <%= f.email_field :email, autofocus: true,  class:"form-control", autocomplete: "email" %>
            </div>

            <div class="form-group">
              <% f.label :password %>パスワード
              <% if @minimum_password_length %>
              <em><div class="fontsmall">(英数字混合、<%= @minimum_password_length %>文字以上で設定してください)</div></em>
              <% end %><br />
              <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <% f.label :password_confirmation %>パスワード（再入力）<br />
              <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
            </div>

            <div class="registbutton text-c inb">
              <%= f.submit "登録する", class:"btn btn-primary" %>
            </div>

          <% end %>
          </div>
        </div>
    </div>
  </div>
</div>