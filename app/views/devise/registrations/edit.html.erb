<div class="container">
  <div class="col-lg-12">
    <div class="well bs-component">
      <div class="form-horizontal">
        <h4 class="margin-t">プロフィール編集</h4>
        <h4 class="margin-t"><%= "#{@user.nickname}さん" %></h4>
          <div class="margin-t">

          <div class="formheader">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'registration-main', html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group formleft">
                <%= f.label :nickname, 'ニックネームを変更する' %><br />
                <%= f.text_field :nickname, class:"form-control", autofocus: true %>
              </div>

              <div class="form-group formleft">
                <%= f.label :email, '登録Eメールアドレス' %><br />
                <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
              </div>

              <div class="form-group textform formleft">
                <%= f.label :profile, 'プロフィール' %><br />
                <%= f.text_area :profile, class:"form-control", autofocus: true %>
              </div>

              <div class="actions">
                <%= f.submit "プロフィールを更新する", class:"btn btn-primary" %>
              </div>
            <% end %>
        </div>
<h4 class="comment">アカウントを削除する</h4>

<p><%= button_to "アカウント削除", registration_path(resource_name), 
data: { confirm: "今まで投稿した記事やコメントも全て消えます。よろしいですか？" }, 
method: :delete , 
class:"btn btn-primary" %></p>

        </div>
    </div>
  </div>
</div>