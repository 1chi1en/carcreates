<div class="container">
  <div class="col-lg-12">
    <div class="well bs-component">
      <div class="form-horizontal">
        <fieldset>
          <h4 class="margin-t">ログインする</h4>
          <div class="margin-t">
          <%= link_to "トップに戻る", root_path, class:"btn btn-primary" %>
          <%= link_to "アカウントの新規作成", new_user_registration_path, class:"btn btn-primary" %>
          </div>

          <div class="formheader">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :パスワード %><br />
                <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :情報を記録する %>
                </div>
              <% end %>

              <div class="registbutton text-c inb">
                <%= f.submit "ログイン", class:"btn btn-primary" %>
              </div>
            <% end %>

          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>

